<div class="row header">
    <div class="columns small-12">
        <h1>
            All events
        </h1>
		<p>
            <%= link_to (fa_icon "arrow-left", text: "Back"), :back %> | <%= link_to (fa_icon "home", text: "Home"), :root %>
        </p>
    </div>
</div>

<div class="row">
	<div class="columns small-12">
		<table>
			<thead>
				<tr>
					<td>Title</td>
					<td>Created at</td>
					<td>&nbsp;</td>
				</tr>
			</thead>
			<tbody>
				<% @events.each do |event| %>
				<tr>
					<td><%= link_to event.title, edit_event_path(id: event.id) %></td>
					<td><%=l event.created_at, format: :eventlist_datetime %></td>
					<td><%= link_to (fa_icon "trash"), event_path(id: event.id), method: :delete, data: { confirm: "Are you sure?" } %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>

<div class="row">
	<div class="columns small-12 text-center">
		<%= will_paginate @events, param_name: 'p' %>
	</div>
</div>